
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<img class="mb-4" src="https://getbootstrap.com/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
<h2>Log in</h2>
<!-- Alert -->
<% flash.each do |key, value| %>
<% if key == "alert" and value !="You have to confirm your email address before continuing." %>
<div class="alert alert-danger" role="alert">
  <div class="d-flex align-items-center justify-content-start">
    <i class="icon ion-ios-close alert-icon tx-24"></i>
    <span><%= value %></span>
  </div><!-- d-flex -->
</div>
<% end %>
<% if key == "notice" %>
<div class="alert alert-info" role="alert">
  <div class="d-flex align-items-center justify-content-start">
    <i class="icon ion-ios-information alert-icon tx-24 mg-t-5 mg-xs-t-0"></i>
    <span><%= value %></span>
  </div><!-- d-flex -->
</div>
<% end %>
<% if key == "alert" and value =="You have to confirm your email address before continuing." %>
<div class="alert alert-info" role="alert">
  <div class="d-flex align-items-center justify-content-start">
    <i class="icon ion-ios-information alert-icon tx-24 mg-t-5 mg-xs-t-0"></i>
    <span><%= value %></span>
  </div><!-- d-flex -->
</div>
<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "mb-2 float-left" %>
<% end %>
<% end %>
<!-- Alert -->
<div class="field">
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder: "Email address" , required: true%>
</div>

<div class="field">
  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control',placeholder: "Password", required: true %>
</div>

<% if devise_mapping.rememberable? %>
<div class="field">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
</div>
<% end %>

<div class="actions">
  <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
</div>
<%= render "users/shared/links" %>
<% end %>