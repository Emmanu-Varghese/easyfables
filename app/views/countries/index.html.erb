<div class="d-flex flex-column flex-lg-row ">
  <div class="mr-auto">
    <h2>Countries</h2>
  </div>

  <span><%= link_to 'New Country', new_country_path , class: "btn btn-primary float-right"%></span>
</div>

<div class="table-responsive mt-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.country_code %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>