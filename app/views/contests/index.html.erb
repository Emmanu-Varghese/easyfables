
      <div class="d-flex flex-column flex-lg-row ">
        <div class="mr-auto">
          <h2>Contests</h2>
        </div>

        <span><%= link_to 'New Contest', new_contest_path , class: "btn btn-primary float-right"%></span>
      </div>

      <div class="table-responsive mt-3">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Prize money</th>
              <th>Start date</th>
              <th>End date</th>
              <th>Category</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @contests.each do |contest| %>
            <tr>
              <td><%= contest.title %></td>
              <td><%= contest.prize_money %></td>
              <td><%= contest.start_date %></td>
              <td><%= contest.end_date %></td>
              <td><%= contest.category.name %></td>
              <td><%= link_to 'Show', contest %></td>
              <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
              <td><%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
