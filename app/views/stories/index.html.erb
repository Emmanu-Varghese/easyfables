<!-- Page Content -->
<div class="container mt-4">

  <div class="row">
    <div class="col-md-12">
      <div class="section-head">
        <div class="d-flex flex-column flex-lg-row">
          <h2 class="mr-auto">Stories</h2>
          <div class="float-right">
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary rounded-0 active">Most Likes</button>
            <button type="button" class="btn btn-secondary rounded-0">Recent</button>
          </div>
          </div>
        </div>
      </div>
    </div>
    <% @stories.each do |story|%>
    <div class="col-lg-4 col-sm-6 mb-4">
      <div class="card h-100">

        <div class="card-body">
          <h4 class="card-title">
            <a href="<%= story_path(story)%>"><%= story.title%></a>
          </h4>
          <p class="card-text"><%= story.intro%></p>
        </div>
        <div class="card-footer">
    <small>Author: <%= story.user.full_name %></small>
    <small class="float-right">Likes: <span id="story-<%= story.id %>-like"><%= story.like %></span>, Comments: 0</small>
  </div>
      </div>
    </div>
    <% end %>
  </div>
  <!-- /.row -->

  <!-- Pagination -->
  <div class="justify-content-center">
    <%= will_paginate @stories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
<!-- /.container -->