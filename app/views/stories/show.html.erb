<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="section-head">
        <div class="d-flex flex-column flex-lg-row">
          <div class="mr-auto">
            <h4 class="mb-1"><%= @story.title %></h4>
            <small><%= @story.user.full_name%></small>
          </div>
          <div class="float-right">
            <small><%= Time.now.strftime("%B %d, %Y")%></small>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="card bg-light mb-3 w-100">
        <div class="card-body">
          <i class="card-text"><%= @story.intro %></i>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <p><%= @story.content %></p>
    </div>
    <div class="col-md-12 mt-4">
      <div class="like-container">
        <% if current_user.present? %>
        <%= button_tag ('<i class="far fa-thumbs-up"></i><span class="like__number ml-1">'+@story.like.to_s+'</span>').html_safe, type: 'button', class: 'like__btn animated', data: { reflex: "click->LikeReflex#toggle", id: @story.id, like_token: current_user.id }%>
        <% else %>
          <%= button_tag ('<i class="far fa-thumbs-up"></i><span class="like__number ml-1">'+@story.like.to_s+'</span>').html_safe, type: 'button', class: 'like__btn animated', data: { reflex: "click->LikeReflex#toggle", id: @story.id }%>
        <% end %>
      </div>
      <h4 class="text-center w-100 mt-2"><i>Give Kudos!</i></h4>
    </div>
    <div class="col-md-12">
      <h3>Comments</h3>
      <div id="comments">
        <%= render partial: "comments/form", locals: { commentable: @story } %>
        <div id="comment-list">
          <%= render @comments, continue_thread: 5 %>
        </div>
      </div>
    </div>
    <% if @comments.count > 5 %>
    <div class="col-md-12 mt-4">
      <div id="paginate-load-more-button"><%= will_paginate @comments %></div>
      <button class="btn btn-light w-100" id="load-more-posts" style="display: block;">Load more comments</button>   
    </div>
    <% end %>
  </div>
</div>
