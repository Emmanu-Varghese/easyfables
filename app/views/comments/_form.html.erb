<%= form_with model: [commentable, Comment.new] do |form| %>
  <div class="form-group">
    <%= form.text_area :body, placeholder: "Add a comment", class: "form-control", required: true, minlength: 9 %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
