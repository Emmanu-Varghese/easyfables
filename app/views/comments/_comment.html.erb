<%= tag.div id: dom_id(comment), class: "border-left pl-4 mt-4" do %>

    <h6 class="mb-0"><%= comment.user.full_name %></h6><small>Commented on: <%= comment.created_at.strftime('%B %d, %Y %I:%M %p')%></small> 
    <p><%= simple_format comment.body %></p>

  <div data-controller="reply">
    <small>
      <%= link_to "Delete", [comment.commentable, comment], method: :delete, data: {confirm: "Are you sure?",remote: true} if comment.user == current_user %>
    </small>
  </div>

<% end %>
